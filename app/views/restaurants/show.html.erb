<h3> Reviews</h3>
	<ul class="list-group">
	  <% @restaurant.reviews.each do |review| %>
	    <li class="list-group-item"><%= review.content %></li>
	    <li class="list-group-item"><%= review.rating %></li>
	  <% end %>
	</ul>

<br>

<%= link_to 'Add a review', new_restaurant_review_path(@restaurant), class: "btn btn-primary mt-1"%>

<%= link_to 'Back to list', restaurants_path, class: "btn btn-primary mt-1"%>

